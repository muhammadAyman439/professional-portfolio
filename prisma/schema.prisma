// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id           String   @id @default("profile")
  name         String
  title        String
  tagline      String
  email        String
  phone        String
  location     String
  profileImage String?
  linkedin     String?
  twitter      String?
  
  // Stats
  statsYearsOfExperience    String
  statsTotalFundingSecured  String
  statsCountries            String
  statsWinningRate          String
  
  // Bio
  bioShort String @db.Text
  bioFull  String @db.Text
  
  // Additional fields
  mission    String   @db.Text
  philosophy String[] // Array of strings
  sectors    String[] // Array of strings
  regions    String[] // Array of strings
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CaseStudy {
  id             String   @id @default(uuid())
  title          String
  client         String
  sector         String
  contractValue  String
  country        String
  description    String   @db.Text
  keyAchievements String[] // Array of strings
  image          String
  featured       Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([featured])
}

model Insight {
  id       String   @id @default(uuid())
  title    String
  excerpt  String   @db.Text
  content  String   @db.Text
  category String
  date     String // Storing as string to match current format
  readTime String
  featured Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([featured])
  @@index([category])
}
